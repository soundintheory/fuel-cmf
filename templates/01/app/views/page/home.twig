{% extends "shared/base.twig" %}

{% block html_title %}{{ model.html_title }} {{ parent() }}{% endblock %}

{% block content %}

    <section id="top-banner">
        <div class="homepage-slider flexslider">
            <ul class="slides">
                {% for slide in model.layout1slides %}
                <li>
                    <img src="{{ crop_url(slide.image,2400,400,'main') }}" alt="{{ slide.title }}"/>
                    <div class="container">
                        <div class="row">
                            <div class="slide-content">
                                <h1 class="title">{{ slide.title }}</h1>
                                <p class="text">{{ slide.left_paragraph|nl2br }}</p>
                                <a class="cta sc inverse" href="{{ get_link(slide.cta_link) }}">{{ slide.cta_text }}</a>
                            </div>
                            <div class="box">
                                <div class="inner">
                                    {{ slide.right_paragraph|nl2br }}
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
        <script type="text/javascript">
            $(document).ready(function() {

                // Reference: http://www.woothemes.com/flexslider/
                $('.homepage-slider').flexslider({
                    animation: "slide",
                    selector: ".slides > li",
                    slideshow: true,
                    slideshowSpeed: 7000,
                    animationSpeed: 800,
                    smoothHeight: false,
                    controlNav: true, // Generates pagination
                    directionNav: true, // Generates next / prev arrows
                    animationLoop: false,
                    useCSS: false
                });

            });
        </script>
    </section> <!-- outer -->

    <section class="body">
        <div class="container body-top">
            {% if model.first_section_title %}<h2 class="section-heading {{ model.first_section_intro?'with-intro':'' }}">{{ model.first_section_title }}</h2>{% endif %}
            {% if model.first_section_intro %}<p class="intro">{{ model.first_section_intro }}</p>{% endif %}
            <div class="item-list overlay row">
                {% for item in model.first_section %}
                    <a href="{{ get_link(item.link) }}" class="item">
                        <figure>
                            <img src="{{ crop_url(item.image,400,300,'main') }}" />
                            <figcaption>{{ item.text }}</figcaption>
                        </figure>
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="container body-middle">
            {% if model.second_section_title %}<h2 class="section-heading {{ model.second_section_intro?'with-intro':'' }}">{{ model.second_section_title }}</h2>{% endif %}
            {% if model.second_section_intro %}<p class="intro">{{ model.second_section_intro }}</p>{% endif %}
            <div class="row">
                <div class="item-list">
                    {% for item in model.second_section %}
                        <a href="{{ get_link(item.link) }}" class="item">
                            <figure>
                                <img src="{{ crop_url(item.image,400,250,'smaller') }}" />
                                <figcaption>{{ item.text }}</figcaption>
                            </figure>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section> <!-- outer -->

{% endblock %}