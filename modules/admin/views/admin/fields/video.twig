{% if settings.title %}<label class="item-label">{{ settings.title }}</label>{% endif %}

<input type="hidden" name="{{ settings.mapping.fieldName }}[src]" data-field-name="{{ settings.mapping.fieldName }}" value="{{ value.src }}" class="file-value" />
<input type="hidden" name="{{ settings.mapping.fieldName }}[width]" value="{{ value.width }}" class="video-width" />
<input type="hidden" name="{{ settings.mapping.fieldName }}[height]" value="{{ value.height }}" class="video-height" />
<input type="hidden" name="{{ settings.mapping.fieldName }}[duration]" value="{{ value.duration }}" class="video-duration" />

<div class="async-upload{{ value.src ? ' populated' : '' }}"></div>