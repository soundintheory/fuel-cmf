{% extends "admin/shared/interface.twig" %}

{% block html_title %}{{ plural }} List : {{ admin_title }}{% endblock %}

{% block main_pane %}
    
    {% include 'admin/shared/alert.twig' %}
    
    <div class="inner">
        
        <h2 class="main-heading"><i class="icon-{{ icon }}"></i> Listing {{ rows|length }} {{ rows|length != 1 ? plural : singular }}</h2>
        <div class="clear"></div>

    	<div class="item-list">

            <div class="row-fluid">
        
                <table class="table table-striped table-bordered selectable sortable fixed-head table-hover">
                    
                    <thead>
                        <tr>
                            {% for column in columns %}
                            <th class="col-type-{{ column.type }}">{{ column.heading|default('-') }}</th>
                            {% endfor %}
                            <th class="actions"></th>
                        </tr>
                    </thead>
                    
                    <tbody>
                        {% for row in rows %}
                        <tr>
                            {% set edit_link = "/admin/"~table_name~"/"~row.get('id')~"/edit" %}
                            {% for column in columns %}
                                {% if column.type == 'method' %}
                                <td class="col-type-{{ column.type }}"><a href="{{ edit_link }}">{{ row.get(column.name) }}</a></td>
                                {% else %}
                                <td class="col-type-{{ column.type }}">{{ field_list_value(row.get(column.name), edit_link, fields[column.name], row)|default('(empty)') }}</td>
                                {% endif %}
                            {% endfor %}
                            <td class="actions"><span>
                                <a class="btn btn-small" href="{{ edit_link }}" rel="tooltip" title="Edit"><i class="icon-pencil"></i></a> 
                                {% if not superlock %}<a class="btn btn-small btn-danger btn-remove" href="/admin/{{ table_name }}/{{ row.get('id') }}/delete" rel="tooltip" title="Delete" data-singular="{{ singular }}"><i class="icon-remove icon-white"></i></a>{% endif %}
                            </span></td>
                            
                        </tr>
                        {% else %}
                        <tr>
                            <td class="no-items" colspan="{{ columns|length + 1 }}">
                                
                                <p>There are no {{ plural|lower }} added yet.</p>
                                {% if not superlock %}
                                <a href="/admin/{{ table_name }}/create" class="btn btn-medium"><i class="icon-plus icon-white"></i> Add {{ singular }}...</a>
                                {% endif %}
                            
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
        
            </div> <!-- .row-fluid -->
        
        </div> <!-- .item-list -->
        
    </div> <!-- .inner -->
    
{% endblock %}

