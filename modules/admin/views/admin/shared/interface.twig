{% extends "admin/shared/base.twig" %}

{% block js_footer %}{% endblock %}

{% block content %}

	<div id="top-bar" class="navbar-fixed-top">
		
		<div class="navbar navbar-inverse">
			<div class="navbar-inner">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<a class="brand" href="/admin">{{ admin_title }}</a>
				<div class="nav-collapse">
					<!-- ul class="nav">
						<li class="active"><a href="#">Home</a></li>
						<li><a href="#about">About</a></li>
						<li><a href="#contact">Contact</a></li>
					</ul -->
					<!-- p class="navbar-text pull-right">Logged in as <a href="#">{{ user.username }}</a></p -->
					<ul class="nav pull-right">
	                    {% if lang_enabled %}
	                    <li class="dropdown">
	                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img class="lang-flag" src="/admin/assets/img/lang/{{ language() }}.png" /> {{ _('languages.'~language(), [], null, 'en') }} <b class="caret"></b></a>
	                        <ul class="dropdown-menu lang-dropdown">
	                            {% for lang in languages() %}
	                                <li><a href="/admin/lang/set/{{ lang.code }}"><img src="/admin/assets/img/lang/{{ lang.code }}.png" class="lang-flag" /> {{ _('languages.'~lang.code, [], null, 'en') }}</a></li>
	                            {% endfor %}
	                            <li><a href="/admin/languages"><i class="icon icon-globe"></i> Edit Languages...</a></li>
	                        </ul>
	                    </li>
	                    {% endif %}
	                    <li class="dropdown">
	                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> {{ user.username }} <b class="caret"></b></a>
	                        <ul class="dropdown-menu">
	                            <li><a href="{{ user.account }}"><i class="icon icon-pencil"></i> Edit Account</a></li>
	                            <li><a href="/admin/logout"><i class="icon icon-circle-arrow-right"></i> Logout</a></li>
	                        </ul>
	                    </li>
	                </ul>
				</div><!--/.nav-collapse -->
			</div>
		</div>
		
		<div class="navbar-sub">
			
			<ul class="breadcrumb">
				{% if lang_enabled %}
				<li><a href="/admin/languages"><img src="/admin/assets/img/lang/{{ language() }}.png" class="lang-flag" /></a></li>
				{% endif %}
				{% block breadcrumb %}{% endblock %}
			</ul>
			
		</div>
		
	</div>

	<div id="frame">
	
	<div id="outer">
		
		<div id="sidebar">
			
			{% include 'admin/shared/sidebar.twig' %}
			
		</div> <!-- #sidebar -->
		
		<div id="main">
			
			<div id="content">
			
			{% block main_pane %}
			{% endblock %}
			
			</div> <!-- #content -->
		
		</div> <!-- #main -->
		
		<div class="clear"></div>
		
	</div> <!-- #outer -->
	
	{% block bottom %}{% endblock %}
	
	</div><!-- #frame -->
	
{% endblock %}