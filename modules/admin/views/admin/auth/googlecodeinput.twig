{% extends "admin/shared/base.twig" %}

{% block content %}
	{% include 'admin/shared/topbar.twig' %}
	<div id="login-container" class="row-fluid">
		
		<div id="login-header">
			<h3>Enter Code</h3>
		</div> <!-- #login-header -->
		
		{% set main_alert = get_flash('main_alert') %}
		{% if main_alert %}
		<!-- Alert area! -->
		<div class="alert {{ main_alert.attributes.class }}">
		    <button class="close" data-dismiss="alert">Ã—</button>
		    {{ main_alert.msg }}
		</div>
		{% endif %}
		
		<div id="login-content" class="clearfix">
			
			<form method="post" action="{{ admin_url('/twofactorinput') }}">
                <h3>Google Authenticator</h3>
				<p style="margin-bottom: 20px;">Please Enter the code displayed on your Google Authenticator App</p>
				<div>
				<input type="text" name="code" placeholder="Enter code"  style="margin-bottom: 20px; width:100%; min-height: 30px; box-sizing: border-box; display:block;">
				</div>
				<div>
					<button type="submit" class="btn-primary btn-large">Submit Code</button>
				</div>
				
			</form>
			
		</div> <!-- #login-content -->
		
		<!-- div id="login-extra">
			<p><a href="#">Forgotten your password?</a></p>
		</div --> <!-- #login-extra -->
		
	</div> <!-- #login-container -->
	
{% endblock %}