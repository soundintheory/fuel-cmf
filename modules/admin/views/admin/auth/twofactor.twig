{% extends "admin/shared/base.twig" %}

{% block content %}
	{% include 'admin/shared/topbar.twig' %}
	<div id="login-container" class="row-fluid">
		
		<div id="login-header">
			<h3>Two Factor Authentication Setup</h3>
		</div> <!-- #login-header -->
		
		{% set main_alert = get_flash('main_alert') %}
		{% if main_alert %}
		<!-- Alert area! -->
		<div class="alert {{ main_alert.attributes.class }}">
		    <button class="close" data-dismiss="alert">Ã—</button>
		    {{ main_alert.msg }}
		</div>
		{% endif %}
		
		<div id="login-content" class="clearfix">
			<h3>Google Authentication</h3>
			<p>
			Download google authenticator from <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&hl=en">Google Play</a> or the 
			<a href="https://itunes.apple.com/gb/app/google-authenticator/id388497605?mt=8">App Store</a> and scan the QR code below to add an account.<br>
			</p>
			<form method="post" action="{{ admin_url('/twofactorsetup') }}">
			<div class="row" style="margin-top:30px; margin-bottom:30px;">
				<img style="display:block; margin: auto;" src="{{img}}"/>
			</div>
				<p>Make sure you have scanned and added the QR code to your device before you click to enable two factor authentication you will no longer be able to view the QR code once enabled.</p>
				<div style="margin-top:30px;">
					<button type="submit" class="btn-primary btn-large" >Enabled Two Factor Authentication</button>
				</div>
				
			</form>
			
		</div> <!-- #login-content -->
		
		<!-- div id="login-extra">
			<p><a href="#">Forgotten your password?</a></p>
		</div --> <!-- #login-extra -->
		
	</div> <!-- #login-container -->
	
{% endblock %}